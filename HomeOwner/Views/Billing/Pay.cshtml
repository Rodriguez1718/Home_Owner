@model HomeOwner.Models.Billing

@{
    ViewData["Title"] = "Pay Bill";
}

<h2>Pay Bill</h2>

<div>
    <h4>Billing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate.ToShortDateString()
        </dd>
    </dl>
</div>

<form asp-action="Pay">
    <input type="hidden" asp-for="BillingId" />
    <input type="hidden" asp-for="Amount" />
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input type="submit" value="Pay" class="btn btn-primary" />
    </div>
</form>
