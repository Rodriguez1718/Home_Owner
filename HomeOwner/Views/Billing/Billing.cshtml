@model IEnumerable<HomeOwner.Models.Billing>

@{
    ViewData["Title"] = "Billing";
}

<h2>Billing</h2>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Amount</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@(item.IsPaid ? "Paid" : "Unpaid")</td>
                <td>
                    @if (!item.IsPaid)
                    {
                        <a asp-controller="Billing" asp-action="Pay" asp-route-id="@item.BillingId" class="btn btn-primary">Pay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
