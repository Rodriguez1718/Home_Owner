<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <a asp-controller="Admin" asp-action="AdminDashboard">Dashboard</a>
        <a asp-controller="AdminUsers" asp-action="Index">User Management</a>
        <a asp-controller="Announcements" asp-action="Index">Announcements</a>
        <a asp-controller="Billing" asp-action="Billing">Billing</a>
        <a asp-controller="Facility" asp-action="Index">Manage Facilities</a>
        <a asp-controller="FacilityReservation" asp-action="Index">Facility Reservation</a>
        <a asp-controller="ServiceRequests" asp-action="Index">Service Requests</a>
        <a asp-controller="Documents" asp-action="Index">Document Management</a>
        <a asp-controller="CommunityForum" asp-action="Index">Community Forum</a>
        <a asp-controller="SecurityFeatures" asp-action="Index">Security Features</a>
        <a asp-controller="Events" asp-action="Index">Event Calendar</a>
        <a asp-controller="Feedback" asp-action="Index">Feedback</a>
        <a asp-controller="ContactDirectory" asp-action="Index">Contact Directory</a>
        <a asp-controller="Reports" asp-action="Index">Reports</a>
        <partial name="_LoginPartial" />
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
