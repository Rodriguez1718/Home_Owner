﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font Awesome -->
</head>
<body>
    <div class="sidebar">
        <!-- Add the image at the top of the sidebar -->
        <div class="sidebar-header">
            <img src="~/img/core-img/logo.png" alt="Admin Logo"/>
        </div>

        <!-- Sidebar navigation links with icons -->
        <a asp-controller="Admin" asp-action="AdminDashboard">
            <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a asp-controller="AdminUsers" asp-action="Index">
            <i class="fas fa-users"></i> User Management
        </a>
        <a asp-controller="Announcements" asp-action="Index">
            <i class="fas fa-bullhorn"></i> Announcements
        </a>
        <a asp-controller="Facility" asp-action="Index">
            <i class="fas fa-building"></i> Manage Facilities
        </a>
        <a asp-controller="FacilityReservation" asp-action="Index">
            <i class="fas fa-calendar-check"></i> Facility Reservation
        </a>
        <a asp-controller="ServiceRequest" asp-action="Index">
            <i class="fas fa-tools"></i> Service Requests
        </a>
        <a asp-controller="Documents" asp-action="Index">
            <i class="fas fa-file-alt"></i> Document Management
        </a>
        <a asp-controller="CommunityForum" asp-action="Index">
            <i class="fas fa-comments"></i> Community Forum
        </a>
        <a asp-controller="SecurityFeatures" asp-action="Index">
            <i class="fas fa-shield-alt"></i> Security Features
        </a>
        <a asp-controller="Events" asp-action="Index">
            <i class="fas fa-calendar-alt"></i> Event Calendar
        </a>
        <a asp-controller="Feedback" asp-action="Index">
            <i class="fas fa-comment-dots"></i> Feedback
        </a>
        <a asp-controller="ContactDirectory" asp-action="Index">
            <i class="fas fa-address-book"></i> Contact Directory
        </a>
        <a asp-controller="Reports" asp-action="Index">
            <i class="fas fa-chart-bar"></i> Reports
        </a>
        <partial name="_LoginPartial" />
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>