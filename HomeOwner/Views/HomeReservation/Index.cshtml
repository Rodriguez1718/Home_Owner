@model IEnumerable<HomeOwner.Models.Facility>

@{
    ViewBag.Title = "Reserve a Facility";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Optional Breadcrumb Area -->
<section class="breadcumb-area bg-img" style="background-image: url('@Url.Content("~/img/bg-img/hero1.jpg")')">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">Reserve a Facility</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Facility Listing Area -->
<section class="section-padding-100">
    <div class="container">
        <div class="mb-4 text-end">
            <a asp-action="MyReservations" class="btn btn-secondary">View Reservation History</a>
        </div>

        @if (!Model.Any())
        {
            <p class="text-center">No facilities available at the moment.</p>
        }
        else
        {
            <div class="row justify-content-center">
                @foreach (var facility in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <h5 class="card-title">@facility.Name</h5>
                                <p class="card-text">@facility.Description</p>
                                <p><strong>Location:</strong> @facility.Location</p>
                                <a asp-action="Create" asp-route-id="@facility.FacilityId" class="btn btn-primary">Reserve</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
