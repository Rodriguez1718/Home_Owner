@model IEnumerable<HomeOwner.Models.Reservation>

@{
    ViewBag.Title = "My Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Optional Breadcrumb/Header -->
<section class="breadcumb-area bg-img" style="background-image: url('@Url.Content("~/img/bg-img/hero1.jpg")')">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">My Reservations</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        You haven't made any reservations yet.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>Facility</th>
                                    <th>Date</th>
                                    <th>Purpose</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var res in Model)
                                {
                                    <tr>
                                        <td>@res.Facility?.Name</td>
                                        <td>@res.ReservationDate.ToString("f")</td>
                                        <td>@res.Purpose</td>
                                        <td>@res.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
